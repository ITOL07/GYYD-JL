<view class="container">
	<view class="top">
	<!--档案日期照片部分-->
		<view class="dateview displayrow">
		<!--日期选择部分-->
			<text class="datetext1">记录日期</text>
			<text class="datetext2" bindtap="tap">选择日期</text>
		</view>
		<view wx:if="{{flag}}" class="displaycolumn photoview">
		<!--照片部分-->
		<view>
			<text class="title">对比照</text>
			<text class="remark">（最多上传三张照片）</text>
		</view>
		<image src="../../images/student/plus.png" class="image"></image>
		</view>
		<view wx:else class="displaycolumn photoview">
		<!--照片部分-->
		<view class="title2">
			<text class="title">对比照</text>
			<text class="remark">（最多上传三张照片）</text>
		</view>
		<view class="imageview">
			<image src="../../images/student/close.png" class="image1"></image>
			<image src="../../images/student/close.png" class="image2"></image>
			<image src="../../images/student/close.png" class="image3"></image>
		</view>
		<view class="displayrow space">
			<view></view>
			<view></view>
			<view></view>
		</view>
		</view>
	</view>
