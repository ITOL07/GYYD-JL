/* container */
.container{
	height: 1200rpx;
	background-color: #FAFAFA;
}

/* top */
.top{
	width: 100%;
	height: 450rpx;
	text-align: center;
	background-color: #FFFFFF;
	justify-content: space-around;
}
.dateview{
	width: 100%;
	height: 100rpx;
	font-size: 30rpx;
	color: #333333;
	border: 1rpx solid #EEEEEE;
	line-height: 100rpx;
	justify-content: space-around;
}
.datetext1{
	width: 50%;
	text-align: left;
	margin-left: 3%;
}
.datetext2{
	width: 50%;
	text-align: right;
	margin-right: 3%;
}
.photoview{
	height: 350rpx;
	padding-left: 3%;
	justify-content: space-around;
	align-items: flex-start;
}
.title{
	font-size: 30rpx;
	color: #333333;
}
.title2{
	font-size: 30rpx;
	color: #333333;
	/* margin-top: 30rpx; */
}
.remark{
	font-size: 22rpx;
	color: #999999;
}
.image{
	width: 120rpx;
	height: 120rpx;
}
.space view{
	width: 220rpx;
	height: 220rpx;
	background-color: #E5E5E5;
	border-radius: 5%;
	margin-right: 25rpx;
	display: inline-block;
}
.imageview{
	margin-bottom: -38rpx;
}
.imageview image{
	width: 22rpx;
	height: 22rpx;
}
 .image1{
	margin-left: 210rpx;
}
.image2{
	margin-left: 221rpx;
}
.image3{
	margin-left: 224rpx;
}

/* bottom */
.bottom{
  width:100%;
  height:auto;
  background:#FFFFFF;
  margin-top:20rpx;
	padding-bottom: 40rpx;
  display:flex;
  flex-direction:column;
}
.bottom .body{
  width:90%;
  height: 90rpx;
	line-height: 100rpx;
  font-size:35rpx;
  color:#333333;
  margin: 30rpx auto 0;
}
.bottom .list{
  width:90%;
  height:120rpx;
	font-size:28rpx;
  color:#666666;
  margin:0 auto;
	position: relative;
  display:flex;
  flex-direction:row;
	align-items: center;
}
.place{
	font-size: 22rpx;
	color: #999999;
	margin-left: 10%;
}
.input{
	width: 60%;
	height: 60rpx;
	border: 1rpx solid #EEEEEE;
	position: absolute;
	right: 60rpx;
}
.bottom .list text{
  width: 49%;
  height:50rpx;
  text-align:left;
	line-height: 50rpx;
  display:block;
}
.bottom .list text:last-child{
  height:50rpx;
	line-height: 50rpx;
  text-align:right;
  display:block;
}