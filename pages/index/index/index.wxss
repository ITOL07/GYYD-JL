/* container,common */
.container{
	background-color: #F3F1F1;
	/* align-items: center; */
}
/* top */
.top{
	width: 100%;
	height: 305rpx;
	margin-bottom: 22rpx;
}
.imgswiper{
	width: 100%;
	height: 100%;
}

/* middle */
.middle{
	width: 100%;
	height: 250rpx;
	background-color: #FFFFFF;
	font-family: PingFangSC-Regular;
	margin-bottom: 13rpx;
	justify-content: space-around;
	align-items: center;
}
.plantime{
	width: 93%; 
	text-align:left;
	margin: 40rpx 3.5%;
	align-items: center;
}
.dateview{
	width: 85%;
	margin-top: -10rpx;
}
.dateview text:nth-child(1){
	font-size: 26rpx;
	color: #333333;
}
.dateview text:nth-child(2){
	font-size: 22rpx;
	color: #666666;
	margin-left: 5%;
}
.button{
	background-color: #F9CE0E;
	border-radius: 20px;
	font-size: 22rpx;
	line-height: 40rpx;
	display: inline-block;
}
.weekview{
	width: 100%;
	height: 120rpx;
	background-color: rgba(0, 0, 0, 0.02);
	font-size: 26rpx;
	color: #333333;
	justify-content: space-between;
	align-items: center;
}
.weekview view:nth-child(1){
	margin-left: 5%;
}
.weekview view:nth-child(7){
	margin-right: 5%;
}

/* bottom */
.bottom{
	width: 95%;
	height: 300rpx;
	background-color: #F8F8F9;
	margin: 13rpx 2.5%;
}
.vieworder{
	width: 100%;
	height: 100%;
	padding: 5rpx 26rpx;
	justify-content: space-around;
}
.first text:nth-child(1){
	width: 28rpx;
	height: 28rpx;
	background-color: #FF9A2B;
	font-size: 22rpx;
	color: #FFFFFF;
	text-align: center;
	line-height: 28rpx;
	border-radius: 4rpx;
	margin-top: 7rpx;
}
.first text:nth-child(2){
	font-size: 28rpx;
	color: #333333;
	margin-left: 2%;
	margin-right: 53%;
	justify-content: space-around;
}
.first text:nth-child(3){
	font-size: 24rpx;
	color: #EC566B;
}
.coursetime, .coursename{
	font-size: 24rpx;
	color: #666666;
}
.last view:nth-child(1){
	width: 55%;
}
.imageview{
	align-items: center;
}
.imageuser{
	width: 60rpx;
	height: 60rpx;
}
.name{
	font-size: 24rpx;
	color: #333333;
	margin-top: 40rpx;
	margin-left: 15rpx;
}
.buttonview{
	width: 40%;
	align-items: center;
	justify-content: flex-end;
}
.button2{
	background-color: #EEEEEE;
}
.button1{
	margin-left: 58%;
}
