<view class="container">
	<!--背景图片，收入标题，提现-->
	<view class="top">
		<view class="border">
		<!--背景图片、收入标题-->
		<view class="imageview">
			<image src="../../images/mine/bgimage.png" class="bgimage"></image>
		</view>
		<view class="textview">
			<view class="displayrow dateview">
			  <text>2018年11月</text>
				<image src="../../images/mine/option2.png"></image>
			</view>
			<view class="income">¥120,000.00</view>
			<view class="income2">总收入</view>
			<view class="displayrow detailview">
				<view class="displaycolumn incomeview">
					<text class="num">¥100,000.00</text>
					<text class="incometext">售课收入</text>
				</view>
				<view class="displaycolumn incomeview">
					<text class="num">¥20,000.00</text>
					<text class="incometext">授课收入</text>
				</view>
			</view>
		</view>
	 </view>
	 <view class="displayrow cashview">
	 <!--提现-->
	 		<image src="../../images/mine/cash.png" class="cash"></image>
			<view class="displaycolumn moneyview">
				<text class="incometext">可提现余额（元）</text>
				<text class="num">120,000.00</text>
			</view>
			<button class="button">提现</button>
	 </view>
	</view>
	<!--详细部分-->
	<view class="bottom">
	<!--标题部分-->
		<view class="displayrow title">
			<view class="title2 space">课程收入明细</view>		
			<view class="title3 space">
				<text>最近半年</text>
				<image src="../../images/mine/option.png"></image>
			</view>		
		</view>
		<!--卡片部分-->
		<view wx:for="{{incomeData}}" wx:key="this" class="displaycolumn card">
			<view class="first displayrow">
				<view class="timetext space">{{item.time}}</view>
				<view class="space money2">
					<text class="money">￥</text>
					<text class="number">{{item.income}}</text>
				</view>
			</view>
			<view class="course displayrow">
				<view class="space">课程：{{item.course}}/会员：{{item.student}}</view>
				<view class="type space">{{item.type}}</view>
			</view>
			<view class="field">场地：{{item.field}}</view>
		</view>
	</view>
</view>